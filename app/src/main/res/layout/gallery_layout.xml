<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:background="@color/colorFundo">


    <TextView
        android:id="@+id/idGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:text="ID"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/nomeGallery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/idGallery"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/idGallery"
        android:src="@mipmap/ic_launcher"
        android:text="TITULO"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/imagemGallery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/nomeGallery"
        />


</RelativeLayout>