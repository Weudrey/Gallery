<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wyz.myimagegallery.Activitys.MainActivity"
    android:background="@color/colorFundo"
    >

    <Button
        android:id="@+id/Inserir"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="82dp"
        android:layout_weight="1"
        android:background="@color/colorFundo"
        android:text="Inserir"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/consultar" />

    <Button
        android:id="@+id/consultar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorFundo"
        android:backgroundTint="@color/colorFundo"
        android:text="Consultar"
        android:textColor="@android:color/black"
        android:layout_above="@+id/Inserir"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/json"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorFundo"
        android:backgroundTint="@color/colorFundo"
        android:text="json"
        android:textColor="@android:color/black"
        android:layout_above="@+id/consultar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tituloDaGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:fontFamily="monospace"
        android:text="Image Gallery"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />



</RelativeLayout>
